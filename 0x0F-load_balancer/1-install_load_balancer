#!/usr/bin/env bash
# A script that installs and configures HAproxy on server

#HAPROXY_CFG="/etc/haproxy/haproxy.cfg"
#WEB01_IP="54.144.157.5"
#WEB02_IP="54.210.3.114"
conf_file="haproxy.cfg"

apt-get update
apt-get install -y haproxy

# backup config file before making changes
#cp $HAPROXY_CFG ${HAPROXY_CFG}.bak

cat <<EOF > $conf_file
frontend charis_http
    bind *:80
    mode http
    timeout client 30s
    default_backend charis_servers

backend charis_servers
    timeout connect 10s
    timeout server 60s
    balance roundrobin
    mode http
    sever web-01 54.144.157.5:80
    sever web-02 54.210.3.114:80
EOF
 
# load config file
haproxy -f $conf_file

# Enable HAProxy in init.d
systemctl enable haproxy

service haproxy start
